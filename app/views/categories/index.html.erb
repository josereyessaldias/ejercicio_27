<p id="notice"><%= notice %></p>
<h1>Categorías</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad de productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %> </td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Editar', edit_category_path(category), :class => "btn btn-light" %></td>
        <td><%= link_to 'Borar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoría', new_category_path %>
